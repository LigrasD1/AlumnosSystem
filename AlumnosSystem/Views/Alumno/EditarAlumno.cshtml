@model AlumnosSystem.Models.AlumnoCLS
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <title></title>
    <style>
        .agrandar input {
            width: 300px;
            flex: 1;
        }

        .agrandar div {
            
            align-items: center;
            margin-bottom: 10px;
        }

        .agrandar label {
            width: 150px;
            margin-right: 150px;
        }

        .agrandar .text-danger {
            margin-top: 5px;
        }

        .btn-container {
            display: flex;
            justify-content: flex-start;
        }

        .card {
            max-width: 400px;
            margin: 20px auto;
            padding: 20px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }
    </style>
</head>
<body>
    <div class="card">
        <form class="agrandar" asp-action="Editar" asp-controller="Alumno" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div>
                <label asp-for="_IdAlumno" class="control-label"></label>
                <input asp-for="_IdAlumno" class="form-control" readonly />
                <span asp-validation-for="_IdAlumno" class="text-danger"></span>
            </div>


            <div>
                <label asp-for="_IdUsuario" class="control-label"></label>
                <input asp-for="_IdUsuario" class="form-control" readonly />
                <span asp-validation-for="_IdUsuario" class="text-danger"></span>

            </div>

            <div>
                <label asp-for="_Apenom" class="control-label"></label>
                <input asp-for="_Apenom" class="form-control" />
                <span asp-validation-for="_Apenom" class="text-danger"></span>

            </div>
            <div>
                <label asp-for="_Dni" class="control-label"></label>
                <input asp-for="_Dni" class="form-control" />
                <span asp-validation-for="_Dni" class="text-danger"></span>

            </div>
            <div>
                <label asp-for="_Email" class="control-label"></label>
                <input asp-for="_Email" class="form-control" />
                <span asp-validation-for="_Email" class="text-danger"></span>

            </div>
            <div>
                <label asp-for="_Telefono" class="control-label"></label>
                <input asp-for="_Telefono" class="form-control" />
                <span asp-validation-for="_Telefono" class="text-danger"></span>

            </div>
            <div>
                <label asp-for="_Estado" class="control-label"></label>
                <select asp-for="_Estado" class="form-control">
                    <option value=@true>"Activo"</option>
                    <option value=@false>"Inactivo"</option>
                </select>
                <span asp-validation-for="_Estado" class="text-danger"></span>
            </div>
            <div class="btn-container" style="display:flex; justify-content:space-around">

                <button type="submit" class="btn btn-success">Guardar</button>
                <a class="btn btn-danger" href="@Url.Action("VAlumno", "Alumno")">Cancelar</a>

            </div>

        </form>
    </div>

</body>
</html>
